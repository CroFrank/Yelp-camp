<% layout('layout/boilerplate') %>

    <div class="container mx-auto">
        <h1 class="text-center text-3xl pb-4">Edit Campground</h1>
        <div class="mx-auto w-5/6">
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" class="needs-validation" method="post"
                novalidate enctype="multipart/form-data">
                <div class="mb-4">
                    <label class="block text-gray-700 text-sm font-bold mb-2" for="title">Title</label>
                    <input class="border rounded-lg py-2 px-3 w-full" type="text" name="campground[title]" id="title"
                        value="<%= campground.title %>" required>
                </div>
                <div class="mb-4">
                    <label class="block text-gray-700 text-sm font-bold mb-2" for="location">Location</label>
                    <input class="border rounded-lg py-2 px-3 w-full" type="text" name="campground[location]"
                        id="location" value="<%= campground.location %>" required>
                </div>
                <div class="mb-4">
                    <label class="block text-gray-700 text-sm font-bold mb-2" for="image">Add images</label>
                    <input class="border rounded-lg py-2 px-3 w-full" type="file" name="image" id="image" required
                        multiple>
                </div>
                <div class="mb-4">
                    <label class="block text-gray-700 text-sm font-bold mb-2" for="price">Price per night</label>
                    <div class="relative rounded-md shadow-sm">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <span class="text-gray-500 sm:text-sm">â‚¬</span>
                        </div>
                        <input type="text" class="border rounded-lg py-2 pl-10 pr-3 w-full" name="campground[price]"
                            id="price" value="<%= campground.price %>" required>
                        <div class="absolute inset-y-0 right-0 pr-3 flex items-center pointer-events-none">
                            <span class="text-gray-500 sm:text-sm">.00</span>
                        </div>
                    </div>
                </div>
                <div class="mb-4">
                    <label class="block text-gray-700 text-sm font-bold mb-2" for="description">Description</label>
                    <textarea class="border rounded-lg py-2 px-3 w-full" name="campground[description]" id="description"
                        required><%= campground.description %></textarea>
                </div>
                <div class="flex justify-between items-center">
                    <button class="bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-600">Update
                    </button>
                    <a href="/campgrounds" class="text-red-500 hover:text-red-700 font-semibold text-lg pr-4">Cancle</a>
                </div>
            </form>
        </div>
    </div>