<% layout('layout/boilerplate') %>

    <div class="row">
        <h1 class="text-center">Your trip experience</h1>
        <div class="col-6 offset-3">
            <form action="/campgrounds" method="post" class="needs-validation" novalidate enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" name="campground[title]" id="title" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" name="campground[location]" id="location" required>
                </div>
                <div class="mb-3">
                    <label for="formFileMultiple" class="form-label">Choose files from your machine or simply drag and
                        drop:</label>
                    <input class="form-control" type="file" id="formFileMultiple" name="image" multiple>
                </div>
                <div class="input-group mb-3">
                    <label class="mb-2" for="price">Price per night</label>
                    <div class="input-group">
                        <span class="input-group-text">â‚¬</span>
                        <input type="text" class="form-control" name="campground[price]"
                            aria-label="Amount (to the nearest dollar)" id="price" required>
                        <span class="input-group-text">.00</span>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" name="campground[description]" id="description"
                        required></textarea>
                </div>
                <button class="btn btn-success">Add Campground</button>
            </form>
            <footer>
                <a href="/campgrounds">All campgrounds</a>
            </footer>
        </div>
    </div>